.container{
    display: flex;
    flex-direction: row;
}
.sort_nav{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 170rpx;
}
.sort_title{
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1px solid #ccc;
}
.active{
    background: #F2F2F2;
}
.sort_content{
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
    background: #f2f2f2;
}
.sort_item_box{
    display: flex;
    flex-direction: column;
}
.sort_item_title{
    height: 50rpx;
    display: flex;
    flex-direction: row;
}
.sort_item_title view{
    flex: 1;
    line-height: 50rpx;
}
.hot_sell{
    font-size:28rpx;
    color: #aaa;
    text-align: right;
}
.sort_item_content{
    width: 580rpx;
    height: 200rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.sort_item_content view{
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 5rpx;
}
.sort_item_content view image{
    width: 100%;
    height: 150rpx;
}
.sort_item_content view text{
    display: block;
    width: 100%;
    text-align: center;
    background: #fff;
}
